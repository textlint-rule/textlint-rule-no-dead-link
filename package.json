{
  "name": "textlint-rule-no-dead-link",
  "version": "4.4.1",
  "description": "A textlint rule to check if all links are alive",
  "engines": {
    "node": ">=4"
  },
  "main": "lib/no-dead-link.js",
  "scripts": {
    "build": "babel src -d lib --source-maps",
    "prepublish": "npm run --if-present build",
    "test": "npm-run-all lint mocha",
    "lint": "eslint --fix src test",
    "mocha": "mocha",
    "prettier": "prettier --write \"**/*.{js,json,md}\""
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "textlint",
    "rule"
  ],
  "author": "nodaguti",
  "license": "MIT",
  "bugs": "https://github.com/textlint-rule/textlint-rule-no-dead-link/issues",
  "homepage": "https://github.com/textlint-rule/textlint-rule-no-dead-link",
  "repository": "textlint-rule/textlint-rule-no-dead-link",
  "dependencies": {
    "fs-extra": "^8.0.1",
    "get-url-origin": "^1.0.1",
    "isomorphic-fetch": "^2.2.1",
    "minimatch": "^3.0.4",
    "textlint-rule-helper": "^2.1.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ],
    "*.json": [
      "prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "textlint": "^11.2.5",
    "textlint-tester": "5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
